{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": true,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "paths": {
      "@app": ["app"],
      "@app/*": ["app/*"],
      "@entities": ["app/entities"],
      "@entities/*": ["app/entities/*"],
      "@common/*": ["app/common/*"],
      "@services/*": ["app/services/*"],
      "@controllers/*": ["app/controllers/*"],
      "@dto/*": ["app/dto/*"],
      "@types/*": ["app/types/*"],
      "@utils/*": ["app/utils/*"],
      "@config/*": ["app/config/*"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.js",
    "webpack.config.ts"
  ]
}
