{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "paths": {
      "@entities": ["src/entities"],
      "@entities/*": ["src/entities/*"],
      "@services/*": ["src/services/*"],
      "@controllers/*": ["src/controllers/*"],
      "@config/*": ["src/config/*"],
      "@dtos/*": ["src/dtos/*"],
      "@modules/*": ["src/modules/*"],
      "@config": ["src/config"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.js",
    "src/scripts/generate.postman.ts"
  ]
}
