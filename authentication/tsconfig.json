{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "baseUrl": "./app",
    "incremental": true,
    "noImplicitAny": false,
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "strictNullChecks": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "jsx": "react",
    "paths": {
      "@/*": ["app/*"],
      "@":["./app"],
      "@entities": ["app/entities"],
      "@entities/*": ["app/entities/*"],
      "@services/*": ["app/services/*"],
      "@controllers": ["app/controllers"],
      "@controllers/*": ["app/controllers/*"],
      "@config/*": ["app/config/*"],
      "@dtos/*": ["app/dtos/*"],
      "@modules/*": ["app/modules/*"],
      "@config": ["app/config"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
    ".eslintrc.js",
     "ui",
    "app/scripts/generate.postman.ts"
  ]
}
