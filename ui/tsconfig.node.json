{
    "compilerOptions": {
      "target": "ES2020",                     
      "module": "commonjs",                   
      "strict": true,                         
      "esModuleInterop": true,                
      "skipLibCheck": true,                   
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",                     
      "rootDir": "./",                     
      "moduleResolution": "node",             
      "resolveJsonModule": true,              
      "sourceMap": true                       
    },
    "exclude": ["node_modules", "**/*.test.ts","src"]
  }